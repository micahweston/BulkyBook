@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
</div>
<br /><br />

<div class="container">
    <table id="tblData" class="table table-striped table-hover py-3 m-auto" >
        <thead>
            <tr class="table-primary">
                <th class="h4">Name</th>
                <th class="h4">Address</th>
                <th class="h4">City</th>
                <th class="h4">State</th>
                <th class="h4">Phone Number</th>
                <th class="h4"></th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}