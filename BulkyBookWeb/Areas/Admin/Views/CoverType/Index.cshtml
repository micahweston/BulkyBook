@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
</div>
<br /><br />

<table class="table table-striped table-hover py-3 m-auto" style="width:80%">
    <thead>
        <tr class="table-primary">
            <th class="h4">Cover Type Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr class="table-dark">
                <td width="50%">
                    @item.Name
                </td>
                <td width="20%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>                  
            </tr>
        }
    </tbody>
</table>

